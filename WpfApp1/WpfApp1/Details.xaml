<Window x:Class="WpfApp1.Deatails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Details" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100"/>

            <ColumnDefinition Width="447*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Label x:Name="label_name" Grid.Column="0" Grid.Row="0" Content="Name" FontStretch="Normal" FontSize="24" Grid.ColumnSpan="2" />
        <Label x:Name="label_price" Grid.Column="0" Grid.Row="1" Content="Price" FontStretch="Normal" FontSize="24" Grid.ColumnSpan="1"/>
        <Label x:Name="label_price_change" Grid.Column="1" Grid.Row="1" Content="Change" FontStretch="Normal" FontSize="24" Grid.ColumnSpan="1"/>

    </Grid>
</Window>
